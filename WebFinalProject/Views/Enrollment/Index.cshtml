@model IEnumerable<WebFinalProject.Models.Enrollment>

@{
    ViewData["Title"] = "Enrollment";
}

<h1>Enrollment</h1>



<p>
    <a asp-action="Create">Create New</a>
</p>

<div>
    <form>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.StudentID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CourseID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Grade)
                    </th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach(var items in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(itemsModel => items.StudentID)
                        </td>
                        <td>
                            @Html.DisplayFor(itemsModel => items.CourseID)
                        </td>
                        <td>
                            @Html.DisplayFor(itemsModel => items.Grade)
                        </td>
                        
                        <td>
                            <a asp-action="Edit" asp-route-id="@items.CourseID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@items.CourseID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@items.CourseID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</div>

